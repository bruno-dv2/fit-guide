<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MeuPerfil">

    <!-- Cabeçalho cinza -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cabecalho"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botão Voltar -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Botão Voltar"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Título -->
        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="Meu Perfil"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.512" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Imagem de Perfil -->
    <ImageView
        android:id="@+id/imagemPerfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_background"
        android:contentDescription="Imagem de Perfil"
        app:layout_constraintTop_toBottomOf="@+id/cabecalho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nome do Usuário -->
    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fulano Silva"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imagemPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão Editar Perfil -->
    <Button
        android:id="@+id/botaoEditarPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Editar Perfil"
        android:backgroundTint="#E0E0E0"
        android:textColor="@android:color/black"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:gravity="start|center_vertical"
        android:padding="12dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão Acessibilidade -->
    <Button
        android:id="@+id/botaoAcessibilidade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Acessibilidade"
        android:backgroundTint="#E0E0E0"
        android:textColor="@android:color/black"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:gravity="start|center_vertical"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/botaoEditarPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão Minhas Fichas -->
    <Button
        android:id="@+id/botaoMinhasFichas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Minhas Fichas"
        android:backgroundTint="#E0E0E0"
        android:textColor="@android:color/black"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:gravity="start|center_vertical"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/botaoAcessibilidade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto Excluir Conta -->
    <TextView
        android:id="@+id/textViewExcluirConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excluir conta"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/botaoMinhasFichas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
